@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Login Page </title>
    <style>
        Body {
            font-family: Calibri, Helvetica, sans-serif;
            background-color: pink;
        }

        button {
            background-color: #4CAF50;
            width: 100%;
            color: orange;
            padding: 15px;
            margin: 10px 0px;
            border: none;
            cursor: pointer;
        }

        form {
            width: 100%;
            height: 250px;
            border: 3px solid #f1f1f1;
        }

        .container {
            padding: 25px;
            background-color: lightblue;
        }
    </style>
</head>
<body>
    <center> <h1> Music player </h1> </center>
    <form enctype="multipart/form-data" method="POST">
        <div id="btn">
            <center><label for="files">Select files</label></center>
        </div>
        <input id="file" name="userfile" accept=".mp3" type="file">
        <button type="submit" onclick="Play_audio()" > Play </button>
    </form>
</body>
</html>